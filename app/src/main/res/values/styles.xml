<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoNewsStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/no_news_message_padding</item>
        <item name="android:textSize">@dimen/no_news_message_text_size</item>
        <item name="android:text">@string/no_news_message</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PostTitleStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/news_post_title_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PostTypeStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/news_post_type_text_size</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="PostContentStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/news_post_content_text_size</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="PostDateStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/news_post_date_text_size</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
